<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="table-container">
          <h2>Water Level Data</h2>
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Water Level</th>
              </tr>
            </thead>
            <tbody>
              {{#each posts limit=3 as |entries|}}
              <tr>
                <td>{{entries.posting_date}}</td>
                <td>{{entries.waterLevel}} ml</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-6">
        <div class="text-container">
          <div class="image-container">
            <img src="/wt.jpeg" alt="Random Image" class="image">
          </div>
          <h2 class="text-center">The level of water today is:</h2>
          {{#each posts}}
            {{#if @last}}
            <p class="text-center">{{waterLevel}} ml</p>
            {{/if}}
          {{/each}}
          <div class="btn-container">
            <button class="btn btn-success" id="Pumpon">Turn on water pump</button>
            <button class="btn btn-danger" id="Pumpoff">Turn off water pump</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="graph-container">
      <h2 class="text-center">Water Level Graph</h2>
      {{> graph }}
    </div>
  </div>
</section>
